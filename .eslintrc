{
  "rules": {
    "no-caller": 2,
    "strict": 0,
    "new-cap": 2,
    "no-alert": 2,
    "max-len": [2, 80, 2],
    "quotes": [2, "single"],
    "camelcase": 2,
    "wrap-iife": [2, "inside"],
    "valid-typeof": 2,
    "valid-jsdoc": [2, { "requireReturn": false }],
    "curly": [0, "multi"],
    "no-use-before-define": 2,
    "no-new": 2,
    "no-return-assign": 0,
    "no-underscore-dangle": 2
  },
  "globals": {
    "window": false,
    "document": false,
    "requestAnimationFrame": false,

    // Used in Node
    "__dirname": false,
    "process": false
  }
}